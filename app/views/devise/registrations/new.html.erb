 
 <%= link_to t('application.application.user_registration') %>

<%= form_with model: @user, url: user_registration_path ,local: true do |f| %>

  <div class="field">
    <%= link_to t('application.application.email') %><br />
    <%= f.email_field :email, id:"user_email", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= link_to t('application.application.password') %><br />
    <%= f.password_field :password, id:"user_password",autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= link_to t('application.application.password_confirmation') %><br />
    <%= f.password_field :password_confirmation, id:"user_password_confirmation", autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= link_to t('application.application.name') %><br />
    <%= f.text_field :name, id:"user_name"%>
  </div>

  <div class="field">
    <%= link_to t('application.application.post') %><br />
    <%= f.text_field :post, class: :form__text, id:"user_post" %>
  </div>

    <div class="actions">
      <%= f.submit  class: :form__btn  %><br/>
    </div>
<% end %>
